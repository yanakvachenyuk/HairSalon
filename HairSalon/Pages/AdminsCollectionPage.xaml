<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HairSalon.Pages.AdminsCollectionPage"
             xmlns:entities="clr-namespace:HairSalon.Entities"
             x:DataType="entities:Admin"
             Title="AdminsCollectionPage">
    
    <ScrollView>
        <CollectionView x:Name="adminsCollectionView" ItemsLayout="VerticalList" SelectionMode="None" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" >
                        <VerticalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="{Binding FirstName}" FontSize="Medium" FontAttributes="Bold" TextColor="#474A51"/>
                                <Label Text="{Binding LastName}" FontSize="Medium" FontAttributes="Bold" TextColor="#474A51"/>
                            </HorizontalStackLayout>
                            <Label Text="{Binding Email}" FontSize="Medium" FontAttributes="Bold" TextColor="#474A51"/>
                            <Label Text="{Binding PhoneNumber}" FontSize="Medium" FontAttributes="Bold" TextColor="#474A51"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>