<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HairSalon.Pages.AddClientPage"
             Title="AddClientPage">
    <VerticalStackLayout>
        <Entry x:Name="NameEntry" Placeholder="Name" />
        <Entry x:Name="SurnameEntry" Placeholder="Surname" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PhoneEntry" Placeholder="Phone number" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />


        <Button Text="Add" Clicked="AddClientButton_Clicked" />


    </VerticalStackLayout>
</ContentPage>