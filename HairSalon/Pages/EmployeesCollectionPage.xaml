<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HairSalon.Pages.EmployeesCollectionPage"
             Title="EmployeesCollectionPage"
             xmlns:entities="clr-namespace:HairSalon.Entities"
             x:DataType="entities:Employee">
    
    <ScrollView>
        <CollectionView x:Name="employeesCollectionView" ItemsLayout="VerticalList" SelectionMode="Single" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" >
                        <VerticalStackLayout>
                            <Label Text="{Binding FirstName}" FontSize="Medium" FontAttributes="Bold" TextColor="#474A51"/>
                        </VerticalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="EmployeeFrame_Tapped" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>